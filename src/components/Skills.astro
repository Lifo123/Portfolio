---
import Icons from "@lifo123/library/Icons";
import { AstroIcon, CSS, Git, HTML, JS, React, Sass,NodeJS, Firebase} from "@Assets/icons/Technologies/Index.ts";
---

<section
    id="skills"
    class="section f-col mb-14"
    style="min-height: max-content;"
>
    <h2 class="fs-4 fw-700 mb-5">Skills</h2>
    <ul class="skills-cont f-row g-4 f-wrap f-center mx-auto">
        <li class="icon f-col f-center">
            <HTML size="32" strokeWidth="2" />
        </li>
        <li class="icon f-col f-center">
            <CSS size="32" strokeWidth="2" />
        </li>
        <li class="icon f-col f-center">
            <JS size="32"/>
        </li>
        <li class="icon f-col f-center">
            <AstroIcon size="32"/>
        </li>
        <li class="icon f-col f-center">
           <React size="32"/>
        </li>
        <li class="icon f-col f-center">
            <Sass size="32"/>
        </li>
        <li class="icon f-col f-center">
            <Git />
        </li><li class="icon f-col f-center">
            <Icons icon="github" size={32} />
        </li>
        <li class="icon f-col f-center">
            <NodeJS size="32"/>
        </li>
        <li class="icon d-flex f-center">
            <Firebase size="32"/>
        </li>
    </ul>
</section>

<style is:inline>
    .skills-cont {
        width: 90%;
    }
    .skills-cont li {
        border-radius: 4px;
        width: max-content;
        padding: 1rem 2rem;
        opacity: 0.8;
        background-color: rgba(var(--lb-bg), .4);
        border: solid 1px rgba(var(--lb-br), .3);
        transition: opacity 0.2s ease;
    }
    .skills-cont li:hover {
        opacity: 1;
        border: solid 1px rgba(var(--lb-br), .55);
    }
    
    @media (650px > width) {
        .skills-cont {
            width: 100%;
        }
        .skills-cont li {
            min-width: 130px;
            width: 44%;
        }
    }
</style>
