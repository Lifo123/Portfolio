---
import { DarkmodeIcon } from "@lifo123/library/Darkmode";
---

<header class="header f-row f-justify-between f-align-center px-4 sticky">
    <a class="fw-700 d-flex f-center" href="/Portfolio/">LIFO</a>
    <ul class="f-row g-4 f-center">
        <li><a href="/Portfolio/#about" id="h-about">About</a></li>
        <li><a href="/Portfolio/Projects/">Projects</a></li>
        <li><a href="/Portfolio/Contact">Contact</a></li>
        <DarkmodeIcon storage="F-Theme" client:only="react" />
    </ul>
</header>

<style>
    .header {
        background-color: rgba(var(--lb-bg), .78);
        padding: 0.8rem 2.4rem;
        width: 100%;
        top: 0px;
        z-index: 1000;
        border: solid 1px rgba(var(--lb-br), 0);

        animation: Scroll linear both;
        animation-timeline: scroll();
        animation-range: 70px 600px;
    }

    @keyframes Scroll {
        100% {
            top: 24px;
            border-radius: 150px;
            width: 85%;
            backdrop-filter: blur(4px);
            padding: 0.4rem 2.4rem 0.46rem 2.4rem;
            border: solid 1px rgba(var(--lb-br), 0.45);
            min-width: max-content;
        }
    }

    header a {
        color: var(--f-p-title);
        font-size: 22px;
    }
    header ul a {
        font-weight: 500;
        font-size: 15.5px;
        padding: 0.3rem;
    }

    @media (650px > width) {
        body {
            overflow-x: hidden;
        }
        .header {
            width: 100%;
            padding: 0.6rem 1.7rem 0.76rem 1.7rem !important;
        }
        @keyframes Scroll {
            100% {
                top: 16px;
                border-radius: 150px;
                width: 95%;
                backdrop-filter: blur(4px);
                padding: 0.4rem 2.4rem 0.46rem 2.4rem;
                border: solid 1px rgba(var(--lb-br), 0.45);
                min-width: max-content;
            }
        }
        header ul {
            gap: 0.5rem !important;
        }
        #h-about {
            display: none;
        }
    }
</style>
